# Server Configuration
PORT=3000
NODE_ENV=development
CORS_ORIGINS="*"

# Database Configuration
DATABASE_URL="file:./dev.db" # SQLite for development
# DATABASE_URL="postgresql://user:password@localhost:5432/codemonkey?schema=public" # PostgreSQL example

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_TLS=false

# ChromaDB Configuration
CHROMADB_HOST="localhost"
CHROMADB_PORT=8000
CHROMADB_API_KEY=""
CHROMADB_TLS=false

# LLM Provider API Keys
CLAUDE_API_KEY="your-claude-api-key"
OPENAI_API_KEY="your-openai-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"

# Ollama Configuration
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_TLS=false

# Agent LLM Configurations
# Format: AGENT_[ROLE]_PROVIDER="provider_name"
# Format: AGENT_[ROLE]_MODEL="model_name"

# Project Manager
AGENT_PROJECT_MANAGER_PROVIDER="claude"
AGENT_PROJECT_MANAGER_MODEL="claude-3-opus-20240229"

# Architect
AGENT_ARCHITECT_PROVIDER="claude"
AGENT_ARCHITECT_MODEL="claude-3-opus-20240229"

# Frontend Developer
AGENT_FRONTEND_DEVELOPER_PROVIDER="openai"
AGENT_FRONTEND_DEVELOPER_MODEL="gpt-4-turbo-preview"

# Backend Developer
AGENT_BACKEND_DEVELOPER_PROVIDER="openai"
AGENT_BACKEND_DEVELOPER_MODEL="gpt-4-turbo-preview"

# Code Reviewer
AGENT_CODE_REVIEWER_PROVIDER="claude"
AGENT_CODE_REVIEWER_MODEL="claude-3-opus-20240229"

# DevOps
AGENT_DEVOPS_PROVIDER="openai"
AGENT_DEVOPS_MODEL="gpt-4-turbo-preview"

# QA Engineer
AGENT_QA_ENGINEER_PROVIDER="claude"
AGENT_QA_ENGINEER_MODEL="claude-3-opus-20240229"

# Default Provider (used if agent-specific provider not set)
DEFAULT_PROVIDER="claude"
DEFAULT_MODEL="claude-3-opus-20240229"

# Agent Settings
AGENT_MEMORY_TTL=3600 # 1 hour in seconds
MAX_CONCURRENT_TASKS=5

# Security
API_KEY_SALT="development-salt"
JWT_SECRET="development-secret"

# Logging
LOG_LEVEL="info" # debug, info, warn, error
LOG_FORMAT="json" # json, text